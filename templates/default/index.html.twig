{% extends 'base.html.twig' %}

{% block title %}Forum - Liste des Topics{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Liste des Topics</h1>

    {% if topics is empty %}
        <div class="alert alert-warning text-center">
            Aucun topic disponible pour le moment.
        </div>
    {% else %}
        <div class="row">
            {% for topic in topics %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-primary">{{ topic.title }}</h5>
                            <p class="card-text text-muted">
                                {{ topic.content|length > 100 ? topic.content[:100] ~ '...' : topic.content }}
                            </p>
                            <p class="text-secondary small">
                                Catégorie : {{ topic.category.name }}
                            </p>
                            <p class="text-secondary small">
                                Langue : {{ topic.language.name }}
                            </p>
                            <p class="text-secondary small">
                                Auteur : {{ topic.user.firstName }} {{ topic.user.lastName }}
                            </p>
                            <p class="text-secondary small">
                                Créé le : {{ topic.createdAt|date('d/m/Y à H:i') }}
                            </p>
                            {# <a href="{{ path('topic_show', { id: topic.id }) }}" class="btn btn-primary btn-sm">
                                Voir le topic
                            </a> #}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
